.chatspace-side
  =render partial: 'shared/sidebar'

.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group--name
        =@group.name
      %ul.chat-main__header--group--user
        Members:
        - @group.users.each do |user|
          %li.chat-main__header--group--user-member
          = user.name
    =link_to "Edit", edit_group_path(@group),class: 'chat-main__header--group--edit'

  .chat-main__body
    = render partial: 'shared/message', collection: @messages

  .chat-main__footer
    = form_for [@group, @message],  html: {class: 'chat-main__footer-form',id: 'new_message'} do |f|
      .chat-main__footer-body
        = f.text_field :content, class: 'chat-main__footer-body-message', placeholder: 'type a message'
        .chat-main__footer-file
          = f.label :image, class: 'form__mask__image' do
            %i.far.fa-image.fa-2x
            =f.file_field :image, class: "image", style: "display:none;"
        =f.submit "Send"







