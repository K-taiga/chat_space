.chat-side
  .chat-side__user
    .chat-side__user__content
      .chat-side__user__name
        = current_user.name
      =link_to new_group_path, class: 'chat-side__user__new-group' do
        %i.fa.fa-pencil-square-o
      =link_to edit_user_path(current_user), class: 'chat-side__user__edit-user' do
        %i.fa.fa-cog

  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
